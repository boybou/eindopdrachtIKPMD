<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.boy.fortniteleaderbords.Fragments.StatBreakdownFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/averageKillsPieChart"
                android:layout_width="match_parent"
                android:layout_height="330dp" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/WinPercentagePieChart"
                android:layout_width="match_parent"
                android:layout_height="330dp" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/gamesPlayedPieChart"
                android:layout_width="match_parent"
                android:layout_height="330dp" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/totalKillsPieChart"
                android:layout_width="match_parent"
                android:layout_height="330dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
